{
  "name": "quality",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "copilot-iep-nx",
  "sourceRoot": "apps/quality/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/quality",
        "index": "apps/quality/src/index.html",
        "main": "apps/quality/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/quality/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/quality/src/favicon.ico", "apps/quality/src/assets"],
        "styles": ["apps/quality/src/styles.scss"],
        "scripts": []
      
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4201,
        "publicHost": "http://localhost:4201"
      },
      "configurations": {
        "production": {
          "buildTarget": "quality:build:production"
        },
        "development": {
          "buildTarget": "quality:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "quality:build"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "quality:build",
        "port": 4201,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "quality:build:development"
        },
        "production": {
          "buildTarget": "quality:build:production"
        }
      }
    }
  }
}
